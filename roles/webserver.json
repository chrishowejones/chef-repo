{
  "name": "webserver",
  "description": "Apache webserver serving HTTP and HTTPS",
  "default_attributes": {
    "apache2": {
      "listen_ports": [
        "80",
        "443"
      ]
    }
  },
  "override_attributes": {
    "default_site_enabled": "true"
  },
  "run_list": [
    "recipe[apache2]",
    "recipe[apache2::mod_ssl]",
    "recipe[iptables::web]"
  ]
}